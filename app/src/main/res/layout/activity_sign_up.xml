<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".SignUpActivity"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="50dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal
">

            <ImageView
                android:id="@+id/imgv_otp_icon"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/phone_number"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp" />

            <TextView
                android:layout_marginTop="50dp"
                android:id="@+id/txtv1"
                android:layout_below="@+id/imgv_otp_icon"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Join With Your Mobile Number..." />


            <TextView
                android:id="@+id/txtv4"
                android:layout_below="@+id/txtv1"
                android:layout_centerHorizontal="true"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:text="on this mobile number"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/txtv5"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/txtv4"
                android:layout_centerHorizontal="true"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:text="Enter your 11 Digit Mobile Number"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" />



            <com.google.android.material.textfield.TextInputLayout
                android:layout_below="@+id/txtv5"
                android:id="@+id/text_input_layout_phone_number"
                android:hint="Phone Number (01xxxxxxxxx)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="250dp"
                android:layout_centerHorizontal="true"
                app:endIconMode="clear_text"
                app:startIconDrawable="@drawable/ic_call_black_24dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:inputType="phone"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_sign_up"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_input_layout_phone_number"
                    android:layout_marginTop="50dp"
                    android:text="Join "
                    android:layout_centerHorizontal="true"
                    android:textAllCaps="false"
                    />


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>